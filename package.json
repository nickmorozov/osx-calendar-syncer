{
  "name": "syncer",
  "version": "1.0.0",
  "description": "A project to sync events and reminders using osascript and SQLite.",
  "main": "src/main.js",
  "dependencies": {
    "dotenv": "latest",
    "osascript": "latest",
    "process": "latest",
    "sqlite3": "latest"
  },
  "scripts": {
    "lint": "eslint src",
    "prebuild": "touch syncer.log && chmod 666 syncer.log",
    "build": "node src/init.js",
    "start": "node src/main.js",
    "prettier": "prettier --write 'src/**/*.{js,ts,json}'",
    "prettier:verify": "prettier --list-different 'src/**/*.{js,ts,json}'",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "prettier-eslint": "latest",
    "stylelint": "latest",
    "stylelint-prettier": "latest"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nickmorozov/calendar-syncer.git"
  },
  "author": "Nick Morozov",
  "license": "MIT"
}
